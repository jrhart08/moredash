{
  "compilerOptions": {
    "target": "es2015",
    "outDir": "lib",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true
  },
  "include": [
    "./src"
  ]
}
